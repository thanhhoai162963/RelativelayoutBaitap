<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Content Here"
        android:textSize="25sp"
        android:textColor="#FFFF"
        android:background="#D50000"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom Content Here"

        android:textColor="#FFFF"
        android:textSize="25sp"
        android:background="#8F8F88"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/Second"
        android:text="Second"
        android:textSize="25sp"
        android:layout_centerInParent="true"
        android:textColor="#FFFF"
        android:background="#1286D3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Frist"
        android:textSize="25sp"
        android:textColor="#FFFF"
        android:layout_toLeftOf="@+id/Top"
        android:layout_below="@+id/Top"
        android:layout_alignBaseline="@id/Second"
        android:background="#26DA2F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Three"
        android:textSize="25sp"
        android:textColor="#FFFF"
        android:layout_alignBaseline="@id/Second"
        android:layout_below="@+id/Top"
        android:layout_toRightOf="@id/Top"
        android:background="#DAC226"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
