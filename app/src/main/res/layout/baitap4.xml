<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:text="1"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingStart="45dp"
        android:id="@+id/maudo"
        android:background="#FF0026"
        android:layout_centerInParent="true"
        android:layout_width="100dp"
        android:layout_height="60dp" />
    <TextView
        android:text="2"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingStart="45dp"
        android:layout_above="@id/maudo"
        android:layout_toStartOf="@id/maudo"
        android:background="#4CAF50"
        android:layout_width="100dp"
        android:layout_height="60dp" />
    <TextView
        android:text="4"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingStart="45dp"
        android:layout_above="@id/maudo"
        android:layout_toEndOf="@id/maudo"
        android:background="#9047D8"
        android:layout_width="100dp"
        android:layout_height="60dp" />
    <TextView
        android:text="3"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingStart="45dp"
        android:layout_below="@id/maudo"
        android:layout_toStartOf="@id/maudo"
        android:background="#A2AE2E"
        android:layout_width="100dp"
        android:layout_height="60dp" />
    <TextView
        android:text="5"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingStart="45dp"
        android:layout_below="@id/maudo"
        android:layout_toEndOf="@id/maudo"
        android:background="#785D2E"
        android:layout_width="100dp"
        android:layout_height="60dp" />
    <TextView
        android:text="6"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingStart="45dp"
        android:background="#8F6464"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:layout_height="60dp" />
    <TextView
        android:text="7"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingStart="45dp"
        android:background="#22CA9B"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"
        android:layout_height="60dp" />
    <TextView
        android:text="8"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingStart="45dp"
        android:background="#2196F3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:layout_height="60dp" />
    <TextView
        android:text="9"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingStart="45dp"
        android:background="#FF9800"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"
        android:layout_height="60dp" />
</RelativeLayout>